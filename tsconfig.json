{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@components/*": [
                "./components/*"
            ]
        },
        "outDir": "dist",
        "target": "es5",
        "lib": [
            "es6",
            "dom",
            "esnext.asynciterable"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve"
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx"
    ]
}